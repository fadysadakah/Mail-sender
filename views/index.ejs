<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.4.1.slim.js"
    integrity="sha256-BTlTdQO9/fascB1drekrDVkaKd9PkwBymMlHOiG+qLI=" crossorigin="anonymous"></script>

<style>
    body {
        background-color: beige;
    }

    #form-div {
        background-color: white;
        margin-top: 50px !important;
        margin: auto;
        width: 500px;
        padding: 30px 50px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2)
    }
</style>
<div class="container">

    <div id="form-div">
        <form action="/" method="POST">
            <center>

                <input class="form-control" type="mail" name="user" placeholder="from">
                <br>
                <input class="form-control" type="password" name="pass" placeholder="password">
                <br>
                <textarea class="form-control" name="subject" cols="50" rows="1" placeholder="subject"></textarea>
                <br>
                <textarea class="form-control" name="text" cols="50" rows="5" placeholder="text"></textarea>
                <br>
                <textarea class="form-control" name="array" cols="50" rows="3" placeholder="to" autocomplete="email"></textarea>
                <br>
                <textarea class="form-control" name="html" cols="50" rows="5" placeholder="html"></textarea>
                <br>
                
            </center>
            
        </form>
        <Button  class="btn btn-lg btn-dark btn-block">Send</Button>

    </div>
</div>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
<script>


    $('button').click(function () {
        var array = $('textarea:nth-child(3n)').val();
        array = '["' + array.replace(/\n/g, '","') + '"]';
         $('textarea:nth-child(3n)').val(array);
         $('form').submit();
    })
</script>